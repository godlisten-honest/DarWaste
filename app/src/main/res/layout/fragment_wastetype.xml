<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Wastetype_container"
    android:layout_gravity="bottom"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="14dp"
    app:cardElevation="15dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    tools:context=".Wastetype"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:text="What are we picking up"
            android:textAlignment="center"
            android:textColor="@color/home_text"
            android:textSize="16sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/wastetype_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:columnCount="2">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/primary"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp">

                        <CheckBox
                            android:id="@+id/check_domestic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">



                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/domestic_foreground"
                                app:tint="@color/bgcont" />

                            <TextView
                                android:id="@+id/text_domestic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="DOMESTIC"
                                android:textAlignment="center"
                                android:textColor="@color/bgcont" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/app_color"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp">

                        <CheckBox
                            android:id="@+id/check_medical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/medicle_foreground"
                                app:tint="@color/bgcont" />

                            <TextView
                                android:id="@+id/text_medical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="MEDICAL"
                                android:textAlignment="center"
                                android:textColor="@color/bgcont" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#009688"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp">

                        <CheckBox
                            android:id="@+id/check_recyclable"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/recyclables_foreground"
                                android:tint="@color/bgcont"/>

                            <TextView
                                android:id="@+id/text_recyclable"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="RECYCLABLE"
                                android:textAlignment="center"
                                android:textColor="@color/bgcont" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@color/primary_dark"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp">

                        <CheckBox
                            android:id="@+id/check_organic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/organic_foreground"
                                android:tint="@color/bgcont"/>

                            <TextView
                                android:id="@+id/text_organic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ORGANIC"
                                android:textAlignment="center"
                                android:textColor="@color/bgcont" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="#F44336"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp">

                        <CheckBox
                            android:id="@+id/check_hazardous"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/hazard_foreground"
                                android:tint="@color/bgcont"/>

                            <TextView
                                android:id="@+id/text_hazardous"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="HAZARDOUS"
                                android:textAlignment="center"
                                android:textColor="@color/bgcont" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="10dp"
                        app:cardBackgroundColor="#00BCD4"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp">

                        <CheckBox
                            android:id="@+id/check_electronic"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:src="@mipmap/electronics_foreground"
                                android:tint="@color/bgcont"/>

                            <TextView
                                android:id="@+id/text_electronic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ELECTRONIC"
                                android:textAlignment="center"
                                android:textColor="@color/bgcont" />
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </GridLayout>

            </LinearLayout>


        </ScrollView>

        <Button
            android:id="@+id/wastetype_button"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center"
            android:backgroundTint="@color/accent"
            android:text="Next"
            android:textColor="@color/background_color"
            app:cornerRadius="20dp"
            app:elevation="10dp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>